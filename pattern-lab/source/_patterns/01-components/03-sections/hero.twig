<!-- Corresponds to hero.json -->
<section class="section section--hero" style="background-image: url({{ hero.src }});">
  <div class="layout-constrain">
    <div class="section__image" role="image" aria-label="alt text">
      <div class="section__title">
        <h1>{{ hero.title }}</h1>
      </div>
    </div>
    {% if hero.intro is defined %}
      <div class="layout-constrain--narrow">
        <h2 class="section__subtitle">
          {{ hero.intro|raw }}
        </h2>
      </div>
    {% endif %}
  </div>
</section>

